{
  "lambda-basic-execution": {
    "policy_content": {
      "Statement": [
        {
          "Action": [
            "logs:CreateLogGroup",
            "logs:CreateLogStream",
            "logs:PutLogEvents",
            "dynamodb:GetItem",
            "dynamodb:Query",
            "dynamodb:PutItem",
            "dynamodb:Batch*",
            "dynamodb:DeleteItem",
            "ssm:PutParameter",
            "ssm:GetParameter",
            "kms:Decrypt",
            "sqs:*",
            "sns:*"
          ],
          "Effect": "Allow",
          "Resource": "*"
        }
      ],
      "Version": "2012-10-17"
    },
    "resource_type": "iam_policy"
  },
  "sqs_handler-role": {
    "predefined_policies": [
      "AWSLambdaSQSQueueExecutionRole"
    ],
    "principal_service": "lambda",
    "custom_policies": [
      "lambda-basic-execution"
    ],
    "resource_type": "iam_role",
    "allowed_accounts": [
      "${account_id}"
    ]
  },
  "sns_handler-role": {
    "predefined_policies": ["AmazonSNSRole"],
    "principal_service": "lambda",
    "custom_policies": [
      "lambda-basic-execution"
    ],
    "resource_type": "iam_role",
    "allowed_accounts": [
      "${account_id}"
    ]
  },
  "async_queue": {
    "resource_type": "sqs_queue",
    "fifo_queue": false,
    "visibility_timeout": 300,
    "delay_seconds": 0,
    "maximum_message_size": 1024,
    "message_retention_period": 60,
    "receive_message_wait_time_seconds": 0,
    "policy": {},
    "redrive_policy": {},
    "content_based_deduplication": false,
    "dependencies": [      {        "resource_name": "sqs_handler-role",        "resource_type": "iam_role"      }    ]
  },
  "lambda_topic": {
    "resource_type": "sns_topic",
    "region": "eu-central-1",
    "event_sources": [],
    "dependencies": [      {        "resource_name": "sns_handler-role",        "resource_type": "iam_role"      }    ]
  }
}